				$('#case-' + x).mouseup(function() {
					$.ajax({
						url: '/tictactoe/tictactoe_grids/' + $partyId,
						type: "PATCH",
						data: "player=" + $player + "&a" + x + "=" + $play
					});
					turnOffButtons();
				});
			}
		}
	}else{
		turnOffButtons();
	}
	if ($oldGrid != $nowGrid){
		changeGrid();
	}
