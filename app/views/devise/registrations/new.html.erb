<div class="d-flex justify-content-center flex-column align-items-center">
  <div class="card text-center">
    <div class="card-header">
      Insciription
    </div>

    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
      </div>

      <div class="form-group">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Mot de passe" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirmation du mot de passe" %>
      </div>

      <div class="form-group">
        <%= f.submit "S'inscrire", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>

    <div class="card-footer">
      <div class="form-group">
        <%= render "devise/shared/links" %>
      </div>
    </div>

  </div>
</div>
