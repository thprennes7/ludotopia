// Upload de l'image des articles
<% unless @article == nil  %>

if ( $('#image<%= params[:article_id] %>').length ) {
  $articleImage = $('#image<%= params[:article_id] %>');
  $articleImage.fadeOut(1500).replaceWith("<%= j render 'image', article: @article %>").fadeIn(1500);
} else {
  $imgContainer = $('#imageContainer<%= @article.id %>');
  console.log('<%= @article.id %>');
  $imgContainer.prepend("<%= j render 'image', article: @article %>").fadeIn(1500);
};

<% else %>

if ( $('#image<%= params[:game_id] %>').length ) {
  $gameImage = $('#image<%= params[:game_id] %>');
  $gameImage.fadeOut(1500).replaceWith("<%= j render 'image', game: @game %>").fadeIn(1500);
} else {
  $imgContainer = $('#imageContainer<%= @game.id %>');
  $imgContainer.prepend("<%= j render 'image', game: @game %>").fadeIn(1500);
};
<% end %>
