<div class="modal fade game-modal" id="articleComments<%= article.id %>" tabindex="-1" role="dialog" aria-labelledby="aurora" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="aurora">Commentaire de <%= article.title %></h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <% article.comments.each do |comment| %>
        <div class="" id="comment<%= comment.id %>">
          <p><%= tidy_date(comment.created_at) %></p>
          <p><%= comment.user.first_name %></p>
          <p><%= comment.description  %></p>
          <%= link_to "Supprimer le commentaire", admin_article_comments_path(comment), method: :delete, remote: true %>
        </div>
        <hr>
        <% end %>
      </div>

      <div class="modal-footer">

      </div>
      <button type="button" class="button secondary" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
