<div class="modal fade game-modal" id="articleComments<%= article.id %>" tabindex="-1" role="dialog" aria-labelledby="aurora" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title" id="aurora">Commentaire de <%= article.title %></h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <% article.comments.each do |comment| %>
        <div id="comment<%= comment.id %>">

          <div class="list-group m-2">
            <p class="list-group-item"><%= tidy_date(comment.created_at) %></p>
            <p class="list-group-item">Auteur : <%= comment.user.first_name %></p>
            <p class="list-group-item"><%= comment.description  %></p>
          </div>
          <%= link_to "Supprimer le commentaire", admin_article_comment_path(comment.article, comment), method: :delete, remote: true, class: "btn btn-outline-danger m-2" %>
          <hr class="m-2">
        </div>
        <% end %>
      </div>

      <div class="modal-footer">

      </div>
      <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
