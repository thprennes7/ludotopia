function changeGrid() {
	for (let x = 1; x <= 9; x++) {
		if ($oldGrid[x] != $nowGrid[x]) {
			$('#case-' + x).empty();
			$('#case-' + x).append($oldGrid[x]);
			$nowGrid[x] = $oldGrid[x];
		}
	}
}

function turnOffButtons() {
	for(let x = 1; x <= 9; x++) {
		$('#case-' + x).off("mouseup");
	}
}

