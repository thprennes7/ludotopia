<div class="d-flex justify-content-center flex-column align-items-center">
  <div class="card text-center">
    <div class="card-header">
      Changez votre mot de passe
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Nouveau mot de passe"%>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation du nouveau mot de passe" %>
      </div>

      <div class="form-group">
        <%= f.submit "Change my password", class: "btn btn-primary btn-block" %>
      </div>
      <% end %>
    </div>

    <div class="card-footer">
      <div class="form-group">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
