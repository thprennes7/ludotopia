<div class="d-flex justify-content-center flex-column align-items-center">
  <h2 class="short-hr-center">MOT DE PASSE OUBLIÉ ?</h2>

  <div id="contactForm" class="mb-5" style="min-width: 30rem">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-group", placeholder: "Email" %>
      <div class="help-block with-errors"></div>
    </div>

    <div class="form-group">
      <%= f.button "Réinitialiser mon mot de passe", class: "button-devise-first", type: "submit" %>
      <div class="help-block with-errors"></div>
    </div>
    <% end %>


    <%= render "devise/shared/links" %>
  </div>
</div>
