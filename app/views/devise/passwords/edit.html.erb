<div class="d-flex justify-content-center flex-column align-items-center">
  <h2 class="short-hr-left">CHANGER VOTRE MOT DE PASSE</h2>

  <div id="contactForm" style="min-width: 30rem">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caract√®res minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Nouveau mot de passe"%>
      <div class="help-block with-errors"></div>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation du nouveau mot de passe" %>
      <div class="help-block with-errors"></div>
    </div>

    <%= f.submit "Changer mon mot de passe", class: "button" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
