<%= form_tag donations_path do %>
  <div id="error_explanation">
    <% if flash[:error].present? %>
      <p><%= flash[:error] %></p>
    <% end %>
  </div>
  <article>
    <%= label_tag(:amount, 'Donation Amount:') %>
    <%= text_field_tag(:amount) %>
  </article>
  <article>
    <%= label_tag(:game_id, 'jeu') %>
    <% @game=Game.all %>
    <%= select_tag "game_id", options_from_collection_for_select(@game, "id", "title") %>
  </article>
  <article>
    <%= hidden_field_tag(:stripeToken) %>
  </article>
  <button id='donateButton'>Donate X</button>
<% end %>
